{
    "compilerOptions": {
        "target": "esnext",
        "baseUrl": "./src",
        "outDir": "./dist",
        "lib": [
            "esnext",
            "dom"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "declaration": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "strict": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "alwaysStrict": true,
        "removeComments": false,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "compileOnSave": false
}