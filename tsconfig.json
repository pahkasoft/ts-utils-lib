{
    "compilerOptions": {
        "baseUrl": "./src",
        "rootDir": "./src",
        "outDir": "./dist",
        "lib": [
            "ES6",
            "DOM"
        ],
        "module": "ES6",
        "target": "ES6",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "declaration": true,
        "declarationDir": "./dist/types",
        "declarationMap": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "strict": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "alwaysStrict": true,
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node-modules/**/*"
    ],
    "compileOnSave": false
}
